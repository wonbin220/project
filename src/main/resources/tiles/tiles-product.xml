<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="baseLayout" template="/WEB-INF/views/common/layout.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
	</definition>
	<!--
	 baseLayout= 공통 레이아웃의 뷰
	/WEB-INF/views/common/layout.jsp = 전체 레이아웃을 정하는 JSP위치
	 -->
	<definition name="main" extends="baseLayout">
		<put-attribute name="title" value="메인 페이지" />
		<put-attribute name="body" value="/WEB-INF/views/main.jsp" />
	</definition>
	<!-- 
	main = 메인화면의 뷰이름 지정
	extends="baseLayout" => 기본적인 레이아웃은 baseLayout을 상속받음
	메인 페이지=> 레이아웃의 제목에 표시할 구문을 지정
	/WEB-INF/views/main.jsp => 레이아웃 본문에 표시할 JSP 
	 -->
</tiles-definitions>